
<h1>My Friends</h1>

<div class="search-area">
  <h3>Add Friends</h3>
  <%= form_tag search_friends_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :user, params[:user], placeholder: "Enter user's email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
        <%= fa_icon "search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
  <%= render 'friends/result' %>
</div>


<% if !@my_friends.empty? %>
 <%= render 'friends/list' %>
<% end %>